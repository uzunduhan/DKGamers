<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DKGamers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:#282828">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark text-white border-bottom box-shadow mb-3 border border-warning">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="icon icon-home"></span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Yeni" asp-action="Index">Yeni</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Populer" asp-action="Index">Popüler</a>
                        </li>
                        <li class="nav-item item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Oyunlar" asp-action="Index">Oyunlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Hakkinda" asp-action="Index">Hakkımızda</a>
                        </li>
                    </ul>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <form class="form-inline">
                        <a asp-area="" asp-controller="Yorum" asp-action="Index">
                            <span class="icon icon-comment" style=" margin-right: 10px"></span>
                        </a>
                        <a asp-area="" asp-controller="Favori" asp-action="Index">
                            <span class="icon icon-like" style=" margin-right: 10px"></span>
                        </a>
                        <a asp-area="" asp-controller="Profil" asp-action="Index">
                            <span class="icon icon-profile" style=" margin-right: 10px"></span>
                        </a>
                        <button class="btn btn-warning text-white mb-2" style="margin-top:1%;" type="submit" asp-area="" asp-controller="Giris" asp-action="Cikis">Çıkış Yap</button>
                    </form>
                }
                else
                {
                    <form class="form-inline">
                        <button class="btn btn-warning text-white mb-2" style="margin-top:1%; margin-right:5px" type="submit" asp-area="" asp-controller="Giris" asp-action="Index">Giriş Yap</button>
                        <button class="btn btn-warning text-white mb-2" style="margin-top:1%" type="submit" asp-area="" asp-controller="Kayit" asp-action="Index">Kayıt Ol</button>
                    </form>
                }
            </div>
        </nav>
        <div class="row justify-content-end">
            <form class="form-inline">
                <input class="form-control mr-sm-1" type="search" placeholder="Ara" aria-label="aranacak kelimeyi al" />
                <button class="btn btn-sm btn-outline-secondary" type="submit">Arama</button>
            </form>
        </div>
        <br />
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - DKGamers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>