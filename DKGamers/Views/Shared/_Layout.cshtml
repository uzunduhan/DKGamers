<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DKGamers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />



</head>
<body style="background-color:#282828">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark text-white border-bottom box-shadow mb-3 border border-warning">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="icon icon-bike"></span>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Yeni" asp-action="Index">Yeni</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Populer" asp-action="Index">Popüler</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="Tek" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Tek Oyunculu</a>
                            <ul class="dropdown-menu" aria-labelledby="Tek">
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Aksiyon" asp-action="Tek">Aksiyon</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Korku" asp-action="Tek">Korku</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Spor" asp-action="Tek">Spor</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Strateji" asp-action="Tek">Strateji</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Simulasyon" asp-action="Tek">Simülasyon</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="HayattaKalma" asp-action="Tek">Hayatta Kalma</a>
                                </li>
                            </ul>

                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="Cok" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Çok Oyunculu</a>
                            <ul class="dropdown-menu" aria-labelledby="Cok">
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Aksiyon" asp-action="Cok">Aksiyon</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Korku" asp-action="Cok">Korku</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Spor" asp-action="Cok">Spor</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Strateji" asp-action="Cok">Strateji</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Simulasyon" asp-action="Cok">Simülasyon</a>
                                </li>
                                <li class="dropdown-item text-white" href="#">
                                    <a class="nav-link text-white" asp-area="" asp-controller="HayattaKalma" asp-action="Cok">Hayatta Kalma</a>
                                </li>
                            </ul>
                        </li>





                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Hakkinda" asp-action="Index">Hakkımızda</a>
                        </li>
                    </ul>
                </div>

                <form class="form-inline">
                    <input class="form-control mr-sm-2 w-25" type="text" style="margin-right:5px;" placeholder="Kullanıcı Adı" aria-label="aranacak kelimeyi al" />
                    <input class="form-control mr-sm-2 w-25" style="margin-right:5px;" type="text" placeholder="Şifre" aria-label="aranacak kelimeyi al" />

                    <button class="btn btn-warning text-white mb-2" style="margin-right:5px; margin-top:1%" type="button">Giriş Yap</button>
                    <button class="btn btn-warning text-white mb-2" style="margin-top:1%" type="button">Kayıt Ol</button>
                </form>



                <select class="selectpicker" data-width="fit">
                    <a href="#cz">
                        <option data-content='<span class="flag-icon flag-icon-cz"></span> English'>Čeština</option>
                    </a>
                    <a href="#de">

                        <option data-content='<span class="flag-icon flag-icon-de"></span> Español'>Deutsch</option>
                    </a>
                    <a href="#en">

                        <option data-content='<span class="flag-icon flag-icon-gb"></span> Español'>English</option>
                    </a>
                </select>

            </div>


        </nav>

        <div class="row justify-content-end">
            <form class="form-inline">
                <input class="form-control mr-sm-1" type="search" placeholder="Ara" aria-label="aranacak kelimeyi al" />
                <button class="btn btn-sm btn-outline-secondary" type="submit">Arama</button>
            </form>
        </div>
        <br />

    </header>


    <div class="container-fluid" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - DKGamers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
 

    @RenderSection("Scripts", required: false)
</body>
</html>


